{
  "compilerOptions": {
    "outDir": "./dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "esModuleInterop": true,
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strictPropertyInitialization": false,
    "baseUrl": "./src",
    "paths": {
      "@core/*": ["core/*"],
      "@lib/*": ["lib/*"]
    }
  },
  "reflection": true,
  "include": ["src/**/*"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
